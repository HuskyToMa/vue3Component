{
    "compilerOptions": {
        "checkJs": false,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "target": "ES2019",
        "module": "esnext",
        "noEmit": false,
        "sourceMap": true,
        "pretty": true,
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./lib",
        "baseUrl": ".",
        "paths": {
            "vue": ["./node_modules/vue"],
            "@components/*": ["components/*"]
        }
    },
   "exclude": [
       "node_modules",
       "build",
       "example",
       "lib"
   ]
}