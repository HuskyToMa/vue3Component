{
    "compilerOptions": {
        "checkJs": false,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "target": "esnext",
        "module": "esnext",
        "noEmit": false,
        "sourceMap": true,
        "pretty": true,
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "./*",
                "./types/*",
                "../types/*"
            ],
            "@packages/*": ["./packages/*"]
        }
    },
    "include": [
        "src/**/*",
        "packages/**/*",
        "types"
    ]
}